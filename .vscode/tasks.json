{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "command": "cmake",
            "args": ["..", "-G", "Ninja"],
            "options": { "cwd": "${workspaceFolder}/build" }
        },
        {
            "label": "Build Wordle",
            "command": "cmake",
            "args": ["--build", "."],
            "options": { "cwd": "${workspaceFolder}/build" },
            "group": { "kind": "build", "isDefault": true }
        }
    ]
}
